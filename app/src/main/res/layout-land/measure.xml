                <!--                    android:text="@string/measure_bmi"-->
                <!--                    android:textAlignment="center"-->
                <!--                    android:layout_marginTop="5dp"-->
                <!--                    android:textSize="15sp"/>-->
                <!--            </LinearLayout>-->
                <!--        </androidx.cardview.widget.CardView>-->

            </GridLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
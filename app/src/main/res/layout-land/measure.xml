<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:grid="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100"
    android:fillViewport="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="100">
            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="500dp"
                android:layout_height="255dp"
                android:layout_marginLeft="200dp"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="200dp"

                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/logo1" />
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="300dp"
                android:columnCount="2"
                android:background="@color/white"
                android:weightSum="100"
                android:layout_marginLeft="200dp"
                android:layout_marginStart="200dp"

                android:layout_centerHorizontal="true"
                grid:alignmentMode="alignBounds"
                grid:columnCount="2"
                grid:rowOrderPreserved="false"
                grid:useDefaultMargins="true">


                <androidx.cardview.widget.CardView
                    android:layout_width="170dp"
                    android:layout_height="200dp"
                    app:cardCornerRadius="8dp"
                    android:padding="10dp"
                    android:layout_marginStart="90dp"
                    android:layout_marginLeft="90dp"
                    android:layout_margin="12dp"
                    android:id="@+id/card_view1"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:layout_marginLeft="10dp"
                        android:weightSum="100"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="108dp"

                            android:src="@drawable/heartrate"
                            android:contentDescription="measure" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/measure_heart_rate"
                            android:textAlignment="center"
                            android:layout_marginTop="5dp"
                            android:textSize="15sp"
                            android:gravity="center_horizontal" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="170dp"
                    android:layout_height="200dp"
                    android:padding="10dp"
                    android:layout_margin="12dp"
                    android:id="@+id/card_view2"

                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:padding="10dp"
                        android:weightSum="100"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="108dp"

                            android:src="@drawable/temp"
                            android:contentDescription="temp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/measure_temperature"
                            android:textAlignment="center"
                            android:layout_marginTop="5dp"
                            android:textSize="15sp"
                            android:gravity="center_horizontal" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="170dp"
                    android:layout_height="200dp"
                    android:padding="10dp"
                    android:layout_margin="12dp"
                    android:id="@+id/card_view3"
                    android:layout_marginStart="90dp"
                    android:layout_marginLeft="90dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:padding="10dp"
                        android:weightSum="100"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="108dp"
                            android:src="@drawable/bp"
                            android:contentDescription="BP" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/measure_bp"
                            android:textAlignment="center"

                            android:layout_marginTop="5dp"
                            android:textSize="15sp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="170dp"
                    android:layout_height="200dp"
                    android:padding="10dp"
                    android:layout_margin="12dp"
                    android:id="@+id/card_view4"

                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:padding="10dp"
                        android:weightSum="100"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="108dp"

                            android:src="@drawable/bmi"
                            android:contentDescription="BMI" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/measure_bmi"
                            android:textAlignment="center"
                            android:layout_marginTop="5dp"
                            android:textSize="15sp"
                            android:gravity="center_horizontal" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

